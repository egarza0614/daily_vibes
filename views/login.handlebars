{{>header}}
<div class=" h-[84%]">
    <div class="w-full h-[90%] flex justify-center items-center flex-col gap-2">
        <div
            class="flex items-center w-96 h-96 justify-center bg-white rounded-md border-2 border-solid border-vibes-light-green shadow-2xl flex-col">
            <p class="text-vibes-medium-green font-bold text-2xl">Welcome Back</p>
            <p class="text-vibes-light-green pb-4">Sign in to your account</p>
            <form action="/submit" method="POST" class="w-3/4">
                <div class="mb-4">
                    <label for="username" class="block text-sm font-medium text-vibes-dark-green">Username</label>
                    <input type="text" id="username" name="username" required
                        class="mt-1 p-2 block w-full border border-vibes-light-green rounded-md bg-gray-100">
                </div>
                <div class="mb-4">
                    <label for="password" class="block text-sm font-medium text-vibes-dark-green">Password</label>
                    <input type="password" id="password" name="password" required
                        class="mt-1 p-2 block w-full border border-vibes-light-green rounded-md bg-gray-100">
                </div>
                <div class="text-center">
                    <button type="button" id="submit" onclick="handleLogin()"
                        class="px-4 py-2 border bg-vibes-light-green rounded-md w-full text-white hover:bg-vibes-medium-green focus:bg-vibes-dark-green">
                        Sign In
                    </button>
                </div>
                <p class="text-vibes-light-green text-center pt-4">Don't have an account? <a href="/signup"
                        class="text-vibes-dark-green font-bold">Register</a></p>
            </form>
        </div>
    </div>
</div>