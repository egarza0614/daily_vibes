{{> mainHeader }}

<div class="min-h-screen flex items-center flex-col pt-4 overflow-auto">
  {{#if hasPosts}}
    <div class="w-full md:w-[40%] lg:w-[30%] xl:w-[25%] bg-white border border-vibes-light-green rounded-md shadow-2xl flex flex-col pt-2 px-7 pb-4 gap-4 mb-4 md:mb-0">
        <div id="usname" class="text-2xl underline underline-offset-2 text-vibes-medium-green">
            {{{username}}}
        </div>
        <div id="biography">
            {{{bio}}}
        </div>
        <div class="flex gap-4">
            <div id="loc">
                <i class="fa-solid fa-location-dot pr-2 text-vibes-dark-green"></i>{{{location}}}
            </div>
            <div id="bday">
                <i class="fa-solid fa-cake-candles pr-2 text-vibes-dark-green"></i>{{{birthday}}}
            </div>
            <div id="accountCreation">
                <i class="fa-solid fa-calendar-days pr-2 text-vibes-dark-green"></i>Joined {{{created_at}}}
            </div>
        </div>
    </div>

    <div id="posts-container" class="w-full md:w-1/2 lg:w-2/3 xl:w-3/4 flex flex-col mt-4 items-center gap-4 shadow-lg overflow-auto">
        {{#each posts as |post|}}
        <div class="bg-white shadow-md p-6 border border-1 border-vibes-medium-green w-full rounded-md">
            <div id="postAuthor" class="text-blue-600 italic cursor-pointer hover:text-blue-500">
                @{{user.username}}
            </div>
            <div class="border-2 border-vibes-medium-green rounded-md p-3">
                <div id="title" class="text-lg font-bold">
                    {{title}}
                </div>
                <div id="content">
                    {{content}}
                </div>
            </div>
            <div class="flex justify-between items-center mt-1">
                <div class="flex items-center w-1/2 gap-4">
                    <i class="fa-regular fa-heart cursor-pointer text-vibes-medium-green text-2xl"></i>
                    <i class="fa-regular fa-comment cursor-pointer text-vibes-medium-green text-2xl"></i>
                    <i class="fa-regular fa-share-from-square text-vibes-medium-green text-2xl"></i>
                </div>
                <div class="displayDateBox flex justify-end w-1/2">
                    {{createdAt}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
  {{else}}
    <p class="text-gray-600 text-center mt-4">This user hasn't posted anything yet.</p> 
  {{/if}}   
</div> 

  